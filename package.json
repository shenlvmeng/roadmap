{
  "name": "roadmap",
  "version": "1.0.2",
  "description": "Enjoy all your gps loci on Baidu map.",
  "main": "index.js",
  "build": {
    "appId": "com.example.traces",
    "productName": "roadmap",
    "files": [
      "**/*"
    ],
    "directories": {
      "buildResources": "dist",
      "output": "build",
      "app": "dist"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": "dmg",
      "icon": "icon.icns"
    },
    "win": {
      "target": "portable",
      "icon": "icon.ico"
    },
    "linux": {
      "target": "AppImage"
    },
    "publish": {
      "owner": "shenlvmeng",
      "provider": "github",
      "repo": "roadmap"
    }
  },
  "scripts": {
    "lint": "tslint --project .",
    "test": "cross-env NODE_ENV=test jest -i",
    "build-main": "webpack --config config/webpack.main.config.js",
    "build-renderer": "webpack --config config/webpack.renderer.config.js",
    "build": "cross-env NODE_ENV=production yarn build-main && yarn build-renderer",
    "dev": "cross-env NODE_ENV=development yarn build-main && (yarn dev-server | electron ./dist/main)",
    "dev-server": "cross-env NODE_ENV=development webpack-dev-server --mode=development --config config/dev/webpack.renderer.config --hot --inline",
    "dev-portal": "cross-env NODE_ENV=development webpack-dev-server --mode=development --config config/dev/webpack.portal.config --hot --inline",
    "build-portal": "webpack --config config/webpack.portal.config.js",
    "start": "yarn dev",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "release": "yarn build && yarn dist"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "homepage": "https://github.com/shenlvmeng/roadmap",
  "repository": "https://github.com/shenlvmeng/roadmap",
  "keywords": [
    "loci",
    "cycle",
    "Electron",
    "road",
    "map"
  ],
  "author": {
    "name": "shenlvmeng",
    "email": "xin_yuanming@163.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.2.0",
    "@types/jest": "^24.0.17",
    "@types/jquery": "^3.3.30",
    "@types/rimraf": "^2.0.2",
    "babel-loader": "^8.0.4",
    "copy-webpack-plugin": "^5.0.4",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.1",
    "electron-builder": "^20.38.2",
    "html-loader": "^0.5.5",
    "html-webpack-inline-source-plugin": "^0.0.10",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.2.0",
    "jest": "^24.9.0",
    "less": "^3.9.0",
    "less-loader": "^5.0.0",
    "lint-staged": "^8.1.0",
    "mini-css-extract-plugin": "^0.8.0",
    "prettier": "^1.15.2",
    "style-loader": "^0.23.1",
    "terser-webpack-plugin": "^1.1.0",
    "ts-jest": "^24.0.2",
    "ts-loader": "^4.0.0",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.1",
    "webpack": "^4.26.0",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10",
    "webpack-merge": "^4.1.4",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "date-fns": "^1.30.1",
    "electron": "^9.4.0",
    "electron-devtools-installer": "^2.2.4",
    "electron-is-dev": "^1.0.1",
    "gpx-parse": "^0.10.4",
    "jquery": "^3.4.1",
    "rimraf": "^3.0.0",
    "write": "^1.0.3"
  }
}
